    <!-- //about -->
    <!-- services -->
    <div style="margin-top: 5rem">
      <form action="">
        <div class="col-6 divv m-auto mt-4">
          <h1>Work intro paragraph</h1>
          <p>
            I'm Amat Alsalam A UX designer &front-end developer and graphic
            designer & product person passionate about creating simple yet
            innovative experiences for users.
          </p>
          <input type="submit" value="Edite" class="ssubmit p-2 w-25"   />
        </div>
      </form>

      <div class="table-responsive col-lg-6 col-sm-12 m-auto divv m-5">
        <table class="table col-12 m-4">
          <tr>
            <th scope="col">school name</th>
            <th scope="col">degree</th>
            <th scope="col">date</th>
            <th scope="col">description</th>
            <th scope="col">Edite</th>
            <th scope="col">Delete</th>
          </tr>

          <% for( let index=0; index < education.length; index++ ) { %>

          <tr>
            <th scope="col"><%= education[index].s_name %></th>
            <th scope="col"><%= education[index].degree %></th>
            <th scope="col"><%= education[index].date %></th>
            <th scope="col"><%= education[index].description %></th>
						<input type="hidden" id="hidden" value="<%=education[index].s_name%>">
            <th scope="col">
              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#staticBackdrop"
								onclick="open_mmodel()"> 
                Edite
              </button>
            </th>
            <th scope="col"><button>Delete</button></th>
          </tr>
          <!-- Button trigger modal -->

          <!-- edit Modal -->
          <div
            class="modal fade"
            id="staticBackdrop"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">
                    Modal title
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <div class="divv m-auto mt-4 education">
                    <form action="/edite_education" method="post" class="w-100">
                      <input
                        class="inputt"
                        type="text"
                        name="s_name"
                        placeholder="please enter education place"
                        value="<%= education[index].s_name  %>"
                      /><br />
											<input type="hidden" class="hidden" id="model_id" name="model_id">
                      <input
                        class="inputt"
                        type="text"
                        name="degree"
                        placeholder="please enter major"
                        value="<%= education[index].degree  %>"
                      /><br />
                      <input class="inputt" type="date" name="date" /><br />
                      <textarea
                        name="description"
                        id=""
                        cols="30"
                        rows="10"
                        placeholder="description"
                        value="<%= education[index].description  %>"
                      ></textarea
                      ><br />

                      <div class="modal-footer">
                        <input type="submit" class="ssubmit" value="Save" />
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </table>

        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Add
        </button>
      </div>
    </div>






    <!-- Adding  -->
    <div
      class="modal fade w-100"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog w-100">
        <div class="modal-content w-100">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Adding education</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="divv m-auto mt-4 education">

						 <!-- Adding  form-->

              <form action="/add_education" method="post" class="w-100">

                <input
                  class="inputt"
                  type="text"
                  name="s_name"
                  placeholder="please enter education place"
                /><br />
                <input
                  class="inputt"
                  type="text"
                  name="degree"
                  placeholder="please enter major"
                /><br />
                <input class="inputt" type="date" name="date" /><br />
                <textarea
                  name="description"
                  id=""
                  cols="30"
                  rows="10"
                  placeholder="description"
                ></textarea
                ><br />

                <div class="modal-footer">
                  <input type="submit" class="ssubmit" value="Save" />
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal -->

