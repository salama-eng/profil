<%- include('./includes/header.ejs') %>



	<!-- //about -->
	<!-- services -->
	<div style="margin-top: 5rem;">

		
		<div class="table-responsive col-lg-6 col-sm-12 m-auto divv m-5 ">
		
				<table class="table col-12  m-4 ">

					<tr>
						<th scope="col">project_title</th>
						<th scope="col">project_name</th>
						<th scope="col">image</th>
						<th scope="col">Edite</th>
						<th scope="col">Delete </th>

					</tr>


          <% for( let index=0; index < work.length; index++ ) { %>

						<tr>
							<th scope="col"><%= work[index].project_title %></th>
							<th scope="col"><%= work[index].project_name %></th>
							<th scope="col"><img src="images/<%= work[index].img %>" width="100px" alt="<%= work[index].img %>"></th>
	
							<th scope="col">
								<button
                type="button"
                class="btn btn-primary"
                
                data-bs-toggle="modal"
                data-bs-target="#staticBackdrop<%= work[index]._id %>"
							> 
                Edite
              </button>
            </th>
           <th> <a href="/delete_work/<%= work[index]._id %>" class="btn btn-danger confirm"> <i
              class="fa fa-close"></i> Delete</a></th>



          </tr>
          <!-- Button trigger modal -->
          <!-- edit Modal -->
				
          <div
            class="modal fade"
            id="staticBackdrop<%= work[index]._id %>"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">
                   edite
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  >X</button>
                </div>
                <div class="modal-body">
                  <div class="divv m-auto mt-4 education">
                    <form action="/edite_work" method="post" class="w-100" enctype="multipart/form-data">
                      <input
                        class="inputt"
                        type="text"
                        name="project_title"
                        placeholder="please enter education place"
                        value="<%= work[index].project_title %>"
                      /><br />
                      		<input type="hidden"   value="<%= work[index]._id  %>"  name="id">
                      <input
                        class="inputt"
                        type="text"
                        name="project_name"
                        placeholder="please enter major"
                        value="<%= work[index].project_name %>"
                      /><br />
											<input class="inputt" type="file" name="img"><br>
										
                      <br />

                      <div class="modal-footer">
                        <input type="submit" class="ssubmit" value="Save" />
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </table>
		
				<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
					Add
				</button>
		
		</div>
	</div>
	<!-- //services -->
	<!-- news -->

	<!-- //news -->


	<!-- Button trigger modal -->

	<!-- Button trigger modal -->


	<!-- Modal -->
	<div class="modal fade w-100" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
		aria-hidden="true">
		<div class="modal-dialog w-100">
			<div class="modal-content w-100">
				<div class="modal-header ">
					<h5 class="modal-title" id="exampleModalLabel">Adding work</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">

					<div class=" divv m-auto mt-4 education ">


						<form action="/add_work" method="post" class="w-100" enctype="multipart/form-data">

							<input class="inputt" type="text" name="project_title"
								placeholder="please enter work title"><br>
							<input class="inputt" type="text" name="project_name"
								placeholder="please enter work name"><br>
							<input class="inputt" type="file" name="img"><br>


					</div>
					<div class="modal-footer">

						<input type="submit" class="ssubmit" value="Save">
					</div>
					</form>

				</div>

			</div>
		</div>


	</div>


	<!-- Modal -->




	<!-- contact -->


